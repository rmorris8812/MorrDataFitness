@using System.Diagnostics.Eventing.Reader
@model LoginViewModel

    <div class="login-page">

        <partial name="_ValidationSummary" />

        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <input class="site-form-control" asp-for="Username" autofocus>
                                </div>
                                @if (Model.EnableLocalLogin)
                                {
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input type="password" class="site-form-control" asp-for="Password" autocomplete="off">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn site-btn-primary" name="button" value="login">Login</button>
                                        <button class="btn site-btn-primary" name="button" value="cancel">Cancel</button>
                                    </div>
                                }
                                @if (!Model.EnableLocalLogin)
                                {
                                    <div class="form-group">
                                        <button class="btn site-btn-primary" name="button" value="findUser">Next</button>
                                    </div>
                                }
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>